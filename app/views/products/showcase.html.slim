#buy_modal.modal.fade
  .modal-header
    a.close data-dismiss="modal" x
    h3 Buy Product
  = simple_form_for 'buy', url: buy_product_path(current_user), html: { class: 'form-horizontal' } do |f|
    .modal-body
      = f.input :owner, as: :hidden, input_html: {value: @user.nickname}
      = f.input :count, as: :integer, input_html: {value: (0.9*current_user.money/(@user.share_price || current_user.money)).to_i}
      = f.input :price, as: :hidden, input_html: {value: @user.share_price}
      = f.input :total_cost, :disabled => true, input_html: {value: (0.9*current_user.money/(@user.share_price || current_user.money)).to_i*@user.share_price}
    .modal-footer
      a.btn data-dismiss="modal" Close
      = f.button :submit, 'Buy', class: 'btn btn-success'

javascript:
  current_money='#{current_user.money}';


h1 Twistock virtual showcase
hr
ul.thumbnails
  - @products.each do |product|
    li.span3.well
      .thumbnail[style="height:250px"]
        h4 = product.name
        p = product.description.html_safe

      .pull-right        
        .btn.btn-small
          h5 $ #{product.price}
          = link_to 'Buy this item'
